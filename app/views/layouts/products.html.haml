<!DOCTYPE html>
%html
  %head
    %title e-commerce app
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "stylesheet", media: "all"
    = stylesheet_link_tag "main", media: "all"
    = stylesheet_link_tag "display_product", media: "all"
    = stylesheet_link_tag "carts", media: "all"
    = stylesheet_link_tag "line_items", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    = render "shared/users_bar"
   
    #wrap
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert

      #header-wrapper
        #header.clearfix
          #logo       
            %h1
              = link_to "The Store", home_url
          - if user_signed_in?
            #toolbar      
              %ul.toolbar-checkout
                %li
                  = link_to "Check Out", nil, class: "large button secondary"
              %ul.toolbar-cart
                %li
                  Cart: 
                  %span.toolbar-cart-count
                    = link_to "#{current_cart.total_items} items", cart_path(current_cart)            
                %li                
          #main-navigation
            %ul        
              %li.current
                = link_to "Home", home_url
              %li
                = link_to "Catalog", nil
              %li
                = link_to "Blog", nil
              %li
                = link_to "About Us", nil

        %div{ style: "clear: both" }              

      #content-wrapper
        #featured-products
          = render "shared/search"
          %br
          = yield
    
    #footer
      #footer-content

        %div{ class: "copyright clearfix" }
          %p
            = link_to "Search", nil
            %span{ style: "color: gray padding: 0 px" } 
            |
            = link_to "About Us", nil
            %span{ style: "color: gray padding: 0 px" } 
            | Copyright Â© 2012 Monochrome.
        

        %ul.credit-cards      
          %li
            = image_tag "icon-visa.png"
          %li
            = image_tag "icon-paypal.png"
          %li
            = image_tag "icon-discover.png"
          %li
            = image_tag "icon-mastercard.png"
          %li
            = image_tag "icon-ae.png"
