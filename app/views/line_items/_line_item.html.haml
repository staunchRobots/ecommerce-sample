.line-item{ data: { id: line_item.id } }
  .line-item-picture
    = link_to(picture_for(line_item.product), line_item.product)
  
  .line-item-content  
    = link_to line_item.product.name, line_item.product
    .stock
      In Stock
    .quantity
      Quantity:
      = line_item.quantity
    .del 
      = link_to "Delete", line_item_path(line_item), method: :delete,
      remote: true, confirm: "Are you sure?"
    

  .line-item-offer
    %p= number_to_currency line_item.total_price
      
